<h2 class="index-headline">Editing Book</h2>

<%= form_for(@book) do |f| %>
<%= render '/layouts/error_message' %>
	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>Body</h4>
	<%= f.text_area :body %>
	<%= f.submit 'Update book' %>
<% end %>
<%= link_to 'Show', book_path(@book.id) %>
<%= link_to 'Back', books_path %>