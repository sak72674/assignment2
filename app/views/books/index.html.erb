<h2 class="index-healine">Books</h2>


	<table>
		<tr>
        	<th>Title</th>
        	<th>Body</th>
        	<th></th>
    	</tr>
    	<% @books.each do |book| %>
		<tr class="index-list">
			<td class="index-list-item"><%= book.title %></td>
			<td class="index-list-item"><%= book.body %></td>
			<td class="index-list-item"><%= link_to 'Show', book_path(book.id) %>
			<%= link_to 'Edit', edit_book_path(book.id) %>
			<%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
		</tr>
		<% end %>
	</table>


<h2 class="index-headline">New Book</h2>

<%= form_for(@book) do |f| %>
	<% if @book.errors.any? %>
 		<div class="alert alert-warning">
  			<ul>
    			<% @book.errors.full_messages.each do |message| %>
    	    	<li><%= message %></li>
    			<% end %>
   			</ul>
		</div>
	<% end %>
	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>Body</h4>
	<%= f.text_area :body %>
	<%= f.submit 'Create book' %>
<% end %>
