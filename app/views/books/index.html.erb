<div class="index-visual">
	<section>
		<h2 class="index-headline">Books</h2>
	</section>
	<table>
		<tr>
        	<th>Title</th>
        	<th>Body</th>
        	<th></th>
        	<th></th>
        	<th></th>
    	</tr>
    	<% @books.each do |book| %>
		<tr class="index-list">
			<td class="index-list-item"><%= book.title %></td>
			<td class="index-list-item"><%= book.body %></td>
			<td><%= link_to 'Show', book_path(book.id), class:"list-item-btn"%></td>
			<td><%= link_to 'Edit', edit_book_path(book.id), class:"list-item-btn"%></td>
			<td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?", class:"list-item-btn" %></td>
		</tr>
		<% end %>
	</table>

	<section>
		<h2 class="index-headline">New Book</h2>
	</section>

	<%= form_for(@book) do |f| %>
		<% if @book.errors.any? %>
 			<div class="alert">
 				<p class="alert-text"><strong><%= @book.errors.count %>errors prohibited this book from being saved:<strong></p>
  				<ul>
    				<% @book.errors.full_messages.each do |message| %>
    		    	<li class="alert-messages"><%= message %></li>
    				<% end %>
   				</ul>
			</div>
		<% end %>
			<%= f.label :title, 'Title', class:"form-item" %>
			<%= f.text_field :title, class:"item-box" %>
			<%= f.label :body, 'Body', class:"form-item" %>
			<%= f.text_area :body, class:"item-box" %>
		<%= f.submit 'Create Book', class:"submit" %>
	<% end %>
</div>
